<section>
  <div class="container-fluid">
    <div class="row">
      <a href="/admin/add-product" class="m-2 btn btn-success ml-auto">Add Product</a>
      </div> 
    <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Product</th>
      <th scope="col">Price</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each product}}
    <tr>
     <th scope="row">{{i}}</th>
      <td>{{name}}</td>
      <td>{{price}}</td>
      <td>{{category}}</td>
      <td>{{des}}</td>
      <td><img style="height:60px; width:60px;" src="/images/product-img/{{_id}}.jpg"></td>
    </tr>
    {{/each}}

  </tbody>
</table>
  </div>
  </section>